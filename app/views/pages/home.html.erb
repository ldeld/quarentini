<div class="home">
  <div class="container">
    <h1 class="home-title">QUARANTINI</h1>
    <div class="row">
    <br>
      <div class="col-md-5 offset-md-6">
        <div class="home-content">
          <div class="home-tagline">
            Social distancing doesnâ€™t mean you should drink alone.
          </div>
          <div class="home-form flipcard" data-controller="flipcard">
            <div class="flipcard-inner">
              <%= simple_form_for @room do |f| %>
                <div class="flip-front">
                  <h4 class="home-form-title">Join your friends online for a good old drinking game.</h4>
                  <div class="form-input ml-2">
                  <%= f.input :name, label: "Party name:", placeholder: "Online party" %>
                  <%= f.submit "Get started", class: "main-btn w-100", data: { action: "flipcard#flip" } %>
                  </div>
                </div>
                <div class="flip-back">
                  <h4 class="home-form-title">
                    Choose a nickname!
                  </h4>
                  <div class="form-input ml-2">
                    <%= f.simple_fields_for :players do |p| %>
                      <%= p.input :nickname, label: "Your nickname:" %>
                    <% end %>
                    <%= f.submit "Start playing", class: "main-btn w-100" %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
